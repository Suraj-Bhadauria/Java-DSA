import java.util.Scanner;
import java.util.ArrayList;

/*
 //Functions in ArrayList
   1) list.add(element);
   2) list.contains(element)
   3) list.set(index, element)
   4) list.remove(index)

//for input in AL(for_loop)
   list.add(in.nextInt());

//for output in AL(for_loop)
    System.out.println(list.get(i))   can't do arr[i]
       


*/


public class Array_List{ 
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        
        // syntax

        ArrayList <Integer> list = new ArrayList<>();
                  //datatype -> here use Wrapper Classes, instead of primitives

        
        list.add(234);
        list.add(23);
        list.add(24);
        list.add(89);

        System.out.println(list);
        System.out.println(list.contains(234));
        list.set(0,99); //this sets Oth index to 99
        list.remove(2); // removes index no 2
        System.out.println(list);  //This internally calling its own toString

         //input
        for(int i=0; i<5; i++){
        list.add(in.nextInt());
    }

        //output
        for(int i=0; i<5; i++){
            System.out.println(list.get(i)); //we can't do this arr[i]
        }










    }
    

   


}
